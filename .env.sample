# Required API keys
NEYNAR_API_KEY=YOUR_NEYNAR_API_KEY
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# App URL (required for sharing)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Snapchain HTTP API endpoint (required)
SNAPCHAIN_HTTP_API_URL=YOUR_SNAPCHAIN_URL/v1/castsByFid

# Payment Configuration (required)
RECIPIENT_WALLET=...
NEXT_PUBLIC_RECIPIENT_WALLET=...

# Database Configuration (required)
# Get this from Vercel Postgres / Neon dashboard
POSTGRES_URL=postgresql://user:password@host:port/database?sslmode=require

# Alchemy RPC URLs (optional - falls back to public endpoints if not set)
ALCHEMY_BASE_RPC_URL=...
ALCHEMY_ARBITRUM_RPC_URL=...

# Optional - Cloudflare R2 Configuration for share images
# If not configured, sharing will still work but without custom images
R2_ACCOUNT_ID=YOUR_R2_ACCOUNT_ID
R2_ACCESS_KEY_ID=YOUR_R2_ACCESS_KEY_ID
R2_SECRET_ACCESS_KEY=YOUR_R2_SECRET_ACCESS_KEY
R2_BUCKET_NAME=YOUR_BUCKET_NAME
R2_PUBLIC_URL=https://your-bucket-url.r2.dev

# Optional - Gemini API (for cheaper AI generation)
GEMINI_API_KEY=YOUR_GEMINI_API_KEY
